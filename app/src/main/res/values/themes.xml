    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/cyan</item>
        <item name="colorOnPrimary">@color/cyan</item>
    </style>

    <style name="FabExtendedMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:backgroundTint">@color/IjoTuo</item>
